<!DOCTYPE html>
<html>
<head>
  <title>CoderSnap</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
    <div class="alert alert-info">
      Welcome, <%= current_user.name %>
      

      <nav class="nav nav-inline">
        <%= link_to "Log out", logout_path, method: 'delete', class: 'nav-link' %>
        <a class="nav-link active" href="<%= messages_sent_path %>">Sent messages</a>
        <a class="nav-link" href="<%= new_message_path %>">New message</a>
        <a class="nav-link" href="<%= users_path %>">Add friends</a>
      </nav>
    </div>
    
    
  <% else %>
    <%= link_to "Log in", new_session_path %>
  <% end %>

  <% if flash.any? %>
    <% flash.each do |key, value| %>
      <div class="alert <%= flash_class_name(key) %> ">
        <%= value %>
      </div>
    <% end %>
  <% end %>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
