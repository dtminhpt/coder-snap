<p id="notice"><%= notice %></p>

<h1>Your received messages</h1>

<table>
  <thead>
    <tr>
      <th>Message from    </th>
      <th>Sent at     </th>
      <th>Read at    </th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr <%= "class=unread" if message.read_at.nil? %>>
        <td><%= message.user.name %></td>
        <td><%= message.created_at %></td>
        <td><%= message.read_at %></td>
        <td><%= link_to('Read', message) if message.read_at.nil? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path %>
